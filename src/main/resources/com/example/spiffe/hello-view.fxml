<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.spiffe.HelloController"
            prefHeight="600.0" prefWidth="800.0">
    <top>
        <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #f0f0f0;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Label text="SPIRE Monitoring Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab text="Workload Registrations">
                <VBox spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Button fx:id="refreshRegistrationsButton" text="Refresh" onAction="#onRefreshRegistrationsClick"/>
                        <Label fx:id="registrationsStatusLabel" text="Status: Not loaded"/>
                    </HBox>
                    <TableView fx:id="registrationsTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="regIdColumn" text="ID" prefWidth="200.0"/>
                            <TableColumn fx:id="regParentIdColumn" text="Parent ID" prefWidth="200.0"/>
                            <TableColumn fx:id="regSelectorsColumn" text="Selectors" prefWidth="300.0"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <Tab text="Agent Status">
                <VBox spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Button fx:id="refreshAgentsButton" text="Refresh" onAction="#onRefreshAgentsClick"/>
                        <Label fx:id="agentsStatusLabel" text="Status: Not loaded"/>
                    </HBox>
                    <TableView fx:id="agentsTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="agentNameColumn" text="Name" prefWidth="150.0"/>
                            <TableColumn fx:id="agentStatusColumn" text="Status" prefWidth="100.0"/>
                            <TableColumn fx:id="agentNodeColumn" text="Node" prefWidth="150.0"/>
                            <TableColumn fx:id="agentVersionColumn" text="Version" prefWidth="100.0"/>
                            <TableColumn fx:id="agentUptimeColumn" text="Uptime" prefWidth="100.0"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <Tab text="Workload Metrics">
                <VBox spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Button fx:id="refreshMetricsButton" text="Refresh" onAction="#onRefreshMetricsClick"/>
                        <Label fx:id="metricsStatusLabel" text="Status: Not loaded"/>
                    </HBox>
                    <GridPane hgap="10.0" vgap="10.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        </rowConstraints>
                        <TitledPane text="Server Health" GridPane.columnIndex="0" GridPane.rowIndex="0" collapsible="false">
                            <VBox spacing="5.0">
                                <Label fx:id="serverStatusLabel" text="Status: Unknown"/>
                                <Label fx:id="serverUptimeLabel" text="Uptime: Unknown"/>
                                <Label fx:id="serverVersionLabel" text="Version: Unknown"/>
                            </VBox>
                        </TitledPane>
                        <TitledPane text="Registration Statistics" GridPane.columnIndex="1" GridPane.rowIndex="0" collapsible="false">
                            <VBox spacing="5.0">
                                <Label fx:id="totalRegistrationsLabel" text="Total Registrations: 0"/>
                                <Label fx:id="nodeRegistrationsLabel" text="Node Registrations: 0"/>
                                <Label fx:id="workloadRegistrationsLabel" text="Workload Registrations: 0"/>
                            </VBox>
                        </TitledPane>
                        <TitledPane text="Agent Statistics" GridPane.columnIndex="0" GridPane.rowIndex="1" collapsible="false">
                            <VBox spacing="5.0">
                                <Label fx:id="totalAgentsLabel" text="Total Agents: 0"/>
                                <Label fx:id="healthyAgentsLabel" text="Healthy Agents: 0"/>
                                <Label fx:id="unhealthyAgentsLabel" text="Unhealthy Agents: 0"/>
                            </VBox>
                        </TitledPane>
                        <TitledPane text="Workload Statistics" GridPane.columnIndex="1" GridPane.rowIndex="1" collapsible="false">
                            <VBox spacing="5.0">
                                <Label fx:id="totalWorkloadsLabel" text="Total Workloads: 0"/>
                                <Label fx:id="activeWorkloadsLabel" text="Active Workloads: 0"/>
                                <Label fx:id="pendingWorkloadsLabel" text="Pending Workloads: 0"/>
                            </VBox>
                        </TitledPane>
                    </GridPane>
                </VBox>
            </Tab>

            <Tab text="Settings">
                <VBox spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <GridPane hgap="10.0" vgap="10.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="150.0" prefWidth="150.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        </rowConstraints>
                        <Label text="Server Cluster Context:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="serverContextField" text="spire-server-cluster" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="Workload Cluster Context:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="workloadContextField" text="workload-cluster" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Refresh Interval (sec):" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="refreshIntervalField" text="30" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Button text="Save Settings" onAction="#onSaveSettingsClick" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    </GridPane>
                </VBox>
            </Tab>
        </TabPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-background-color: #f0f0f0;">
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
            <Label fx:id="statusLabel" text="Ready"/>
        </HBox>
    </bottom>
</BorderPane>
